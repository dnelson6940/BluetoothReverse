<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
	  <LinearLayout
	      android:id="@+id/icon_item_layout"
	      android:layout_width="wrap_content"
	      android:layout_height="fill_parent"
	      android:layout_centerVertical="true" >
	    <ImageView android:id="@+id/id_icon"
	        android:layout_width="@android:dimen/app_icon_size"
	        android:layout_height="@android:dimen/app_icon_size"
	        android:layout_alignParentTop="true"
	        android:layout_alignParentLeft="true"
	        android:scaleType="fitCenter"
	    />
	  </LinearLayout>
  <LinearLayout
      android:id="@+id/name_item_layout"
      android:layout_width="wrap_content"
      android:layout_height="fill_parent"
      android:layout_toRightOf="@id/icon_item_layout"
      android:layout_marginLeft="16dip"
      android:layout_centerVertical="true">
    <TextView android:id="@+id/id_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_toRightOf="@id/id_icon"
        android:textColor="@android:color/black"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceMedium"
    />
  </LinearLayout>
  
   <LinearLayout
      android:id="@+id/number_item_layout"
      android:layout_width="wrap_content"
      android:layout_height="fill_parent"
      android:layout_toRightOf="@id/name_item_layout"
      android:layout_centerVertical="true">
    <TextView android:id="@+id/id_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/id_name"
        android:maxLines="1"
        android:textColor="@android:color/black"     
        android:layout_marginLeft="40dip"
        android:textAppearance="?android:attr/textAppearanceMedium"
    />
    </LinearLayout>
</RelativeLayout>